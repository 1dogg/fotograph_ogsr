none = true

[logic]
active = {-propusk_baza2} walker@1, {+propusk_baza2} walker@2 
combat_ignore = combat_ignore
danger = danger_condition
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+soldaty_enemy%

[death]
on_info = {=killed_by_actor} %+soldaty_enemy%

[walker@1]
path_walk = baza2_uvorot1_walk
path_look = baza2_uvorot1_look
meet = no_meet
danger = danger_condition
on_actor_dist_le_nvis = 12 | {-propusk_est} remark@start

[remark@start]
anim = backoff
snd = prohod1
target = actor
meet = no_meet
danger = danger_condition
on_signal = sound_end | remark@1

[remark@1]
anim = guard
target = actor
meet = meet
danger = danger_condition
on_info = {+propusk_est} remark@2

[remark@2]
anim = guard_rac
target = actor
snd = prohod2
meet = no_meet
danger = danger_condition
on_signal = sound_end | remark@3 

[remark@3]
anim = guard
target = actor
snd = prohod3
meet = no_meet
danger = danger_condition
on_signal = sound_end | walker@2 %+propusk_baza2%

[walker@2]
path_walk = baza2_uvorot1_walk
path_look = baza2_uvorot1_look
meet = no_meet
danger = danger_condition

[danger_condition]
