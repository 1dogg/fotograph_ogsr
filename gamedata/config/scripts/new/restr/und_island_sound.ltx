[sr_idle@4]
on_timer = 4000 | %-nikogo_net%
on_timer2 = 10000 | {-blastt} sr_idle@5 %=foto2.message_to_sahar%

[sr_idle@5]
on_timer = 25000 | {-blastt} nil %+heli_botan =foto2.message_from_sahar_2%

 
