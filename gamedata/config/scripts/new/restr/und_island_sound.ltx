active = sr_idle@1

[sr_idle@1]
on_actor_inside = {+task_island -heli_botan -enable_voice} sr_idle@2 %=foto2.scan_monster%

[sr_idle@2]
on_timer = 4000 | sr_idle@3 

[sr_idle@3]
