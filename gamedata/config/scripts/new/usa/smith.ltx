[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = camper@smith
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+usa_enemy%

[death]
on_info = {=killed_by_actor} %+usa_enemy%

[camper@smith]
path_walk = smith_walk
path_look = smith_look
meet = no_meet
def_state_standing = ward
danger = danger_condition@smith
on_info = {+smith_nachalo_start -smith_start_dialog_start} camper@smith1, {+smith_start_dialog_start} camper@smith2  

[camper@smith1]
path_walk = smith_walk
path_look = smith_look
meet = meet@smith
def_state_standing = ward
danger = danger_condition@smith
on_actor_dist_le_nvis = 2.3 | remark@smith1

[camper@smith2]
path_walk = smith_walk
path_look = smith_look
meet = meet@smith
def_state_standing = ward
danger = danger_condition@smith
on_actor_dist_le_nvis = 5 | {+smith_start_dialog_start -voronin_vstrecha_start} remark@smith2, {+voronin_vstrecha_start -brown_two_dialog_vhod} remark@smith2 %+brown_total_proval%, {+voronin_vstrecha_start +brown_two_dialog_vhod} remark@smith2

[remark@smith1]
anim = ward
target = actor
snd = smith
meet = no_meet
danger = danger_condition@smith
on_signal = sound_end | camper@smith3

[remark@smith2]
anim = ward
target = actor
snd = smith2
meet = no_meet
danger = danger_condition@smith
on_signal = sound_end | camper@smith3

[camper@smith3]
path_walk = smith_walk
path_look = smith_look
meet = meet@smith
def_state_standing = ward
danger = danger_condition@smith

[danger_condition@smith]
ignore_distance = 10
ignore_distance_corpse = 0

[meet@smith]
use = true
use_wpn = false
meet_talk_enabled = true