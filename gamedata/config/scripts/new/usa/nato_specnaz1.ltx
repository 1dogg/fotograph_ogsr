[smart_terrains]
none = true

[logic]
active = {-smith_nachalo_dialog_start} camper@specnaz1, {+smith_nachalo_dialog_start} camper@specnaz11
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+usa_enemy%

[death]
on_info = {=killed_by_actor} %+usa_enemy%

[camper@specnaz1]
path_walk = specnaz1_walk
path_look = specnaz1_look
meet = no_meet
danger = danger_condition@specnaz1
on_info = {+smith_nachalo_dialog_start} camper@specnaz11

[camper@specnaz11]
path_walk = specnaz11_walk
path_look = specnaz11_look
meet = no_meet
danger = danger_condition@specnaz1

[danger_condition@specnaz1]
ignore_distance = 20
ignore_distance_corpse = 0

