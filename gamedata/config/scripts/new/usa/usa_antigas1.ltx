[smart_terrains]
none = true

[logic]
active = {-parol_est} camper@usa_antigas1, {+parol_est} camper@usa_antigas11
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+usa_enemy%

[death]
on_info = {=killed_by_actor} %+usa_enemy%

[camper@usa_antigas1]
path_walk = usa_antigas1_walk
path_look = usa_antigas1_look
meet = no_meet
danger = danger_condition@usa_antigas1
on_actor_dist_le_nvis = 12 | {-parol_est} remark@1

[remark@1]
anim = assault
target = actor
meet = no_meet
danger = danger_condition
on_info = {+parol_est} camper@usa_antigas11
on_actor_dist_le_nvis = 4 | {+brown_tri_dialog_done -actor_40} remark@11 

[remark@11]
anim = assault
target = actor
snd = blokpost_stop
meet = no_meet
danger = danger_condition
on_signal = sound_end | remark@1 %=play_snd(ambient\new\actor_40) +actor_40%

[camper@usa_antigas11]
path_walk = usa_antigas1_walk
path_look = usa_antigas1_look
meet = meet@usa_antigas1
danger = danger_condition@usa_antigas1

[danger_condition@usa_antigas1]
ignore_distance = 20
ignore_distance_corpse = 0

[meet@usa_antigas1]
use = true
use_wpn = false
meet_talk_enabled = true
