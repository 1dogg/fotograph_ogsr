[smart_terrains]
none = true

[logic]
active = camper@specnaz4
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+usa_enemy%

[death]
on_info = {=killed_by_actor} %+usa_enemy%

[camper@specnaz4]
path_walk = specnaz4_walk
path_look = specnaz4_look
meet = no_meet
danger = danger_condition@specnaz4
on_timer = 30000 | remark@specnaz4

[remark@specnaz4]
anim = binocular
meet = no_meet
target = specnaz4_look, 0
danger = danger_condition@specnaz4
on_timer = 10000 | camper@specnaz4

[danger_condition@specnaz4]
ignore_distance = 20
ignore_distance_corpse = 0

