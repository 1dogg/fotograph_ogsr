[smart_terrains]
none = true

[logic]
active = {-mario_nachalo} walker@nato_start, {+mario_nachalo +brityi_dogovoril} walker@nato
combat_ignore = combat_ignore
trade = misc\new_trader\trade_mono.ltx
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+usa_enemy%

[death]
on_info = {=killed_by_actor} %+usa_enemy%

[walker@nato_start]
path_walk = nato_enginer_walk
path_look = nato_enginer_look
meet = no_meet
def_state_standing = ward
danger = danger_condition@nato
on_actor_dist_le = 7 | %+mario_nachalo%
on_info = {+brityi_dogovoril -brityi_start_dialog_start} remark@nato1 

[walker@nato]
path_walk = nato_enginer_walk
path_look = nato_enginer_look
meet = no_meet
def_state_standing = ward
danger = danger_condition@nato
on_actor_dist_le = 5 | {+brityi_dogovoril -brityi_start_dialog_start} remark@nato1, {+brityi_start_dialog_start -voronin_vstrecha_start} remark@nato2, {+voronin_vstrecha_start -brown_two_dialog_vhod} remark@nato2 %+brown_total_proval%, {+voronin_vstrecha_start +brown_two_dialog_vhod} remark@nato2  

[remark@nato1]
anim = hello
snd = benelli_start
target = actor
meet = no_meet
danger = danger_condition@nato
on_signal = sound_end | walker@nato1

[remark@nato2]
anim = ward
snd = benelli_start2
target = actor
meet = no_meet
danger = danger_condition@nato
on_signal = sound_end | walker@nato1

[walker@nato1]
path_walk = nato_enginer_walk
path_look = nato_enginer_look
meet = meet@nato
def_state_standing = ward
danger = danger_condition@nato

[danger_condition@nato]
ignore_distance = 10
ignore_distance_corpse = 0

[meet@nato]
use = true
use_wpn = true
meet_talk_enabled = true