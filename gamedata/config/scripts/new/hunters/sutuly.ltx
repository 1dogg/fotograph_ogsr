[smart_terrains]
none = true

[logic]
active = camper@sutuly
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+enemy_hunter%

[death]
on_info = {=killed_by_actor} %+enemy_hunter%

[camper@sutuly]
