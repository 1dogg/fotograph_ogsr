[logic]
active = ph_door@close 

[ph_door@close]
locked = false
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@open
on_info = {+skin_lock} ph_door@lock   ;для уникалов-любителей закрыть за собой двери

[ph_door@open]
locked = false
closed = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@close
on_info = {+skin_lock -skin_perehod} ph_door@lock %+skin_perehod%

[ph_door@lock]
locked = true
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_info = {=check_belt(mutant_hand_kontroler_m) -utug_ubili} ph_door@open
on_info2 = {+kont_pahan} ph_door@open