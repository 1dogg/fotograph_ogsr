[ph_car@2]
usable = false
show_tips = true
tip_use = tip_car_dizel_use
tip_locked = tip_car_dizel_wait
on_timer = 7000 | ph_car@3 %=fotograf.restore_move =bind_stalker.restore_weapon%
on_death_info = dead_car_dizel1

[ph_car@3]
usable = {+car_dizel1_est}
show_tips = true
tip_use = tip_car_use
tip_locked = tip_car_locked
on_death_info = dead_car_dizel1
on_use = %=play_snd(new\car_door)%