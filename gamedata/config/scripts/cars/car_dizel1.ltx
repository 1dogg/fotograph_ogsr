[logic]
active = {-car_dizel1_est} ph_car@start, {+car_dizel1_est} ph_car@3

[ph_car@start]
usable = false
show_tips = true
tip_use = tip_car_use
tip_locked = tip_car_dizel_locked
on_use = ph_car@1
on_death_info = dead_car_dizel1

[ph_car@1]
usable = {=actor_has_item(amk_kanistro)}
show_tips = true
tip_use = tip_car_dizel_use
tip_locked = tip_car_dizel_locked
