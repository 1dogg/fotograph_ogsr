[logic]
active = {-info_valprom_31 -info_valprom_32} sr_idle@one, {+info_valprom_31 -info_valprom_32} sr_idle@tri, {+info_valprom_31 +info_valprom_32} sr_idle@five

[sr_idle@one]
on_actor_inside = {+amb_prom} sr_idle@two %=play_snd(ambient\new\crane_signal) +info_valprom_31%

[sr_idle@two]
on_timer = 60000 | sr_idle@tri

[sr_idle@tri]
on_actor_inside = {+info_valprom_31} sr_idle@four %=play_snd(ambient\new\mono_stop) +info_valprom_32%

[sr_idle@four]
on_timer = 90000 | sr_idle@five

[sr_idle@five]
on_actor_inside = {+info_valprom_32} sr_idle@six %=play_snd(ambient\new\ghost_scream_18) -info_valprom_31 -info_valprom_32%

[sr_idle@six]
on_timer = 120000 | sr_idle@one 
