on_actor_inside = {+info_valbunk_03} sr_idle@four %=play_snd(ambient\new\energy2) +info_valbunk_04%

[sr_idle@four]
on_timer = 90000 | sr_idle@five

[sr_idle@five]
on_actor_inside = {+info_valbunk_04} sr_idle@six %=play_snd(ambient\new\energy3) -info_valbunk_03 -info_valbunk_04%

[sr_idle@six]
on_timer = 120000 | sr_idle@one 