[sr_idle@one]
on_actor_inside = {+amb_prip} sr_idle@two %=play_snd(ambient\new\sta_work_4) +info_valprip_01%

[sr_idle@two]
on_timer = 120000 | sr_idle@tri

[sr_idle@tri]
on_actor_inside = {+info_valprip_01} sr_idle@four %=play_snd(ambient\new\sta_work_6) +info_valprip_02%

[sr_idle@four]
on_timer = 240000 | sr_idle@five

[sr_idle@five]
on_actor_inside = {+info_valprip_02} sr_idle@six %=play_snd(ambient\new\ghost_scream_10) -info_valprip_01 -info_valprip_02%

[sr_idle@six]
on_timer = 360000 | sr_idle@one 