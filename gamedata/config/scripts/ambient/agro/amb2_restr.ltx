on_actor_inside = {+info_valagro_01} sr_idle@four %=play_snd(ambient\new\dark_space) +info_valagro_02%

[sr_idle@four]
on_timer = 360000 | sr_idle@five

[sr_idle@five]
on_actor_inside = {+info_valagro_02} sr_idle@six %=play_snd(ambient\new\blackout) -info_valagro_01 -info_valagro_02%

[sr_idle@six]
on_timer = 240000 | sr_idle@one 