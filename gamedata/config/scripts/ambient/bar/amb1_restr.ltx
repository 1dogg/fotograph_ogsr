[logic]
active = {-info_valbar_01 -info_valbar_02} sr_idle@one, {+info_valbar_01 -info_valbar_02} sr_idle@tri, {+info_valbar_01 +info_valbar_02} sr_idle@five

[sr_idle@one]
on_actor_inside = {+amb_bar} sr_idle@two %=play_snd(ambient\random_new\mystical_13) +info_valbar_01%

[sr_idle@two]
on_timer = 900000 | sr_idle@tri

[sr_idle@tri]
on_actor_inside = {+info_valbar_01} sr_idle@four %=play_snd(ambient\new\howl_3) +info_valbar_02%

[sr_idle@four]
on_timer = 360000 | sr_idle@five

[sr_idle@five]
on_actor_inside = {+info_valbar_02} sr_idle@six %=play_snd(ambient\new\dark_one_start_1) -info_valbar_01 -info_valbar_02%

[sr_idle@six]
on_timer = 240000 | sr_idle@one 