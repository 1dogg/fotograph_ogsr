[logic]
active = {-info_valpesh_01 -info_valpesh_02} sr_idle@one, {+info_valpesh_01 -info_valpesh_02} sr_idle@tri, {+info_valpesh_01 +info_valpesh_02} sr_idle@five

[sr_idle@one]
on_actor_inside = {+amb_pesh} sr_idle@two %=play_snd(ambient\new\vorota_close) +info_valpesh_01%

[sr_idle@two]
on_timer = 90000 | sr_idle@tri

[sr_idle@tri]
on_actor_inside = {+info_valpesh_01} sr_idle@four %=play_snd(ambient\new\ghost_scream_3) +info_valpesh_02%

[sr_idle@four]
on_timer = 360000 | sr_idle@five

[sr_idle@five]
on_actor_inside = {+info_valpesh_02} sr_idle@six %=play_snd(ambient\new\ind_noise_7) -info_valpesh_01 -info_valpesh_02%

[sr_idle@six]
on_timer = 240000 | sr_idle@one 