[smart_terrains]
none = true

[logic]
active = walker@1
danger = danger_condition
combat_ignore = combat_ignore

[walker@1]
path_walk = mihas_und_walk
path_look = mihas_und_look
danger = danger_condition
combat_ignore_cond = {=fighting_actor}
meet = no_meet
on_actor_dist_le_nvis = 10 | remark@vstrecha %=bind_stalker.hide_weapon =fotograf.no_move%  

[remark@vstrecha]
target = actor
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
combat_ignore_cond = {=fighting_actor}
on_timer = 3000 | remark@1 

[remark@1]
anim = ward
target = actor
snd = mihas
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
combat_ignore_cond = {=fighting_actor}
on_signal = sound_end | remark@2 %+mihas_skazal%

[remark@2]
anim = ward
target = actor
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
combat_ignore_cond = {=fighting_actor}
on_timer = 1000 | %=fotograf.del_mihas_und =bind_stalker.restore_weapon =fotograf.restore_move =play_snd(ambient\new\actor_popal)%

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = true
meet_talk_enabled = true

