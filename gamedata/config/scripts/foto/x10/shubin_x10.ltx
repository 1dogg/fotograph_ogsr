[smart_terrains]
none = true

[logic]
active = walker@1
danger = danger_condition
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+shubin_enemy2%

[death]
on_info = {=killed_by_actor} %+shubin_enemy2%

[walker@1]
path_walk = shubin_x10_walk
path_look = shubin_x10_look
meet = no_meet
danger = danger_condition
combat_ignore_cond = always
def_state_standing = caution
on_info = {+brown3_skazal} remark@1
on_info2 = {+shubin_enemy2} %=fotograf.del_shubin_x10%

[remark@1]
anim = caution
snd = shubin_restr
target = shubin_x10_look, 0
meet = no_meet
danger = danger_condition
combat_ignore_cond = always
on_signal = sound_end | remark@2
on_info = {+shubin_enemy2} %=fotograf.del_shubin_x10%

[remark@2]
target = actor
meet = meet
combat_ignore_cond = always
danger = danger_condition
on_info = {+shubin_enemy} remark@3  
on_info2 = {+shubin_enemy2} %=fotograf.del_shubin_x10%
on_info3 = {+shubin_pentagramm_dialog_start} remark@5

[remark@3]
anim = press
target = actor
meet = no_meet
snd = shubin_enemy
combat_ignore_cond = always
danger = danger_condition
;on_signal = sound_end | remark@4 %=fotograf.del_shubin_x10 =fotograf.actor_loshara_shubin% 
on_signal = sound_end | remark@4 %=fotograf.actor_loshara_shubin%
on_info = {+shubin_enemy2} %=fotograf.del_shubin_x10%

[remark@4]
target = actor
meet = meet
combat_ignore_cond = always
danger = danger_condition
on_info = {+shubin_enemy2} %=fotograf.del_shubin_x10%
on_info2 = {+shubin_pentagramm_dialog_start} remark@5

[remark@5]
anim = caution
;snd = shubin_restr
target = shubin_x10_look, 0
meet = no_meet
danger = danger_condition
combat_ignore_cond = always
;on_signal = sound_end | remark@6 %=fotograf.del_shubin_x10 +shubin_in_brown% 
