[smart_terrains]
none = true
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+shubin_sar_enemy% 

[death]
on_info = {=killed_by_actor} %+shubin_sar_enemy%

[logic]
active = walker@1
danger = danger_condition
combat_ignore = combat_ignore

[walker@1]
path_walk = shubin_sar_walk
path_look = shubin_sar_look
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_timer = 3000 | remark@1 
on_info = {+shubin_sar_enemy} %=fotograf.del_shubin_sar%

[remark@1]
target = actor
meet = no_meet
snd = shubin_sar_01
combat_ignore_cond = always
danger = danger_condition
on_signal = sound_end | remark@2 
on_info = {+shubin_sar_enemy} %=fotograf.del_shubin_sar% 

[remark@2]
target = actor
meet = meet
combat_ignore_cond = always
danger = danger_condition
