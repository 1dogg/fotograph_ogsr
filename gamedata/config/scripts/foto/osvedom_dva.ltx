[smart_terrains]
none = true

[logic]
active = camper@1
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+svyaznoy_vrag%

[death]
on_info = {=killed_by_actor} %+svyaznoy_vrag%

[camper@1]
path_walk = osvedom_dva_walk
path_look = osvedom_dva_look
meet = no_meet
danger = danger_condition
on_actor_dist_le = 3 | remark@1
on_info = {+svyaznoy_vrag} %=killactor%

[remark@1]
anim = ward
target = actor
snd = osvedom
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_signal = sound_end | camper@2 

[camper@2]
path_walk = osvedom_dva_walk
path_look = osvedom_dva_look
meet = meet
danger = danger_condition
on_info = {+svyaznoy_vrag} %=killactor%

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = false
meet_talk_enabled = true
meet_state = ward