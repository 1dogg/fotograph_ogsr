[smart_terrains]
none = true

[logic]
active = {-osved_skazal} camper@1, {+osved_skazal} camper@2
combat_ignore = combat_ignore

[camper@1]
path_walk = osvedom_walk
path_look = osvedom_look
meet = no_meet
danger = danger_condition
on_actor_dist_le = 3 | remark@1

[remark@1]
anim = ward
target = actor
snd = osvedom
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_signal = sound_end | remark@vstrecha %=play_snd(ambient\new\actor_43)%

[remark@vstrecha]
anim = ward
target = actor
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_timer = 4000 | camper@2 %+osved_skazal%

[camper@2]
path_walk = osvedom_walk
path_look = osvedom_look
meet = meet
danger = danger_condition

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = false
meet_talk_enabled = true
meet_state = ward