[smart_terrains]
none = true

[logic]
active = {-dolg_ataka_start} walker@1, {+dolg_ataka_start -dolg_ataka_have} walker@3, {+dolg_ataka_have} walker@4 
danger = danger_condition
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+enemy_dolg%

[death]
on_info = {=killed_by_actor} %+enemy_dolg%

[walker@1]
path_walk = dolg_mask4_walk
path_look = dolg_mask4_look
meet = no_meet
danger = danger_condition
on_info = {+dolg_ataka_start} walker@2
on_info2 = {+actor_terminator} walker@2

[walker@2]
path_walk = dolg_mask4_walk
path_look = dolg_mask4_look
meet = no_meet
danger = danger_condition
on_timer = 1500 | walker@3

[walker@3]
path_walk = dolg_mask44_walk
path_look = dolg_mask44_look
meet = no_meet
danger = danger_condition
on_info = {+dolg_ataka_have} walker@4

[walker@4]
path_walk = dolg_mask44_walk
path_look = dolg_mask44_look
meet = meet
danger = danger_condition

[danger_condition]
ignore_distance = 15
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = false
meet_talk_enabled = true
