[smart_terrains]
none = true

[logic]
active = remark@1
danger = danger_condition
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[remark@1]
anim = hello
snd = shubin_hello
target = actor
meet = no_meet
danger = danger_condition
combat_ignore_cond = always
on_actor_dist_le_nvis = 2.1 | %=boryan67.shubin_oy =boryan67.remove_shubin%
on_signal = sound_end | remark@2 %=boryan67.shubin_help%
on_info = {+shubin_enemy} %=boryan67.remove_shubin%

[remark@2]
target = actor
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_actor_dist_le_nvis = 2.1 | %=boryan67.shubin_oy =boryan67.remove_shubin%
on_info = {+shubin_enemy} %=boryan67.remove_shubin%

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = false
meet_talk_enabled = true

[hit]
on_info = {=hit_by_actor} %+shubin_enemy%

[death]
on_info = {=killed_by_actor} %+shubin_enemy%
