[smart_terrains]
none = true

[logic]
active = {-mamasha_uhodit} walker@1, {+mamasha_uhodit} walker@3
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+bratok_enemy%

[death]
on_info = {=killed_by_actor} %+bratok_enemy%

[walker@1]
path_walk = mama_walk
path_look = mama_look
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_info = {+mamasha_spawn} walker@2

[walker@2]
path_walk = mama1_walk
path_look = mama_look
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_signal = mama | {+zhila_start_dialog_start} remark@1

[remark@1]
anim = kastrula
snd = mama
target = 30256
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_signal = sound_end | %+mama_skazala% 
on_info = {+mamasha_uhodit} walker@3

[walker@3]
path_walk = mama_walk
path_look = mama_look
meet = no_meet
combat_ignore_cond = always
danger = danger_condition

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = false
meet_talk_enabled = true
