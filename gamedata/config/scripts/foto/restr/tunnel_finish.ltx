[logic]
active = sr_idle@1

[sr_idle@1]
on_actor_inside = sr_idle@2 %=run_postprocess(blink) =tunnel.finish_tele =bind_stalker.hide_weapon =play_snd(anomaly\teleport_work_2)% 

[sr_idle@2]
on_timer = 1000 | sr_idle@3 %=tunnel.finish_stranger%

[sr_idle@3]
on_info = {+tunnel_transfer} sr_idle@4

[sr_idle@4]
on_timer = 1000 | sr_idle@5 %=tunnel.dell_stranger =tunnel.transfer%

[sr_idle@5]
on_timer = 1000 | nil %=tunnel.dell_tele =bind_stalker.restore_weapon =fotograf.check_time_taynik%
