[smart_terrains]
none = true

[logic]
active = {-osvedom_one_dialog_start} walker@1, {+osvedom_one_dialog_start} walker@11
danger = danger_condition

[walker@1]
path_walk = osvedom_les_walk
path_look = osvedom_les_look
danger = danger_condition
meet = no_meet
def_state_moving1 = walk
def_state_moving2 = walk
def_state_moving3 = walk
on_signal = izba | remark@1

[remark@1]
target = actor
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_actor_dist_le = 2.1 | remark@11

[remark@11]
target = actor
snd = osvedom
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_signal = sound_end | walker@11

[walker@11]
path_walk = osvedom_les1_walk
path_look = osvedom_les1_look
danger = danger_condition
meet = meet
def_state_standing = ward

[danger_condition]
ignore_distance = 5
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = false
meet_talk_enabled = true