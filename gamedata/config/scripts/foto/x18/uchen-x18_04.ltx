[smart_terrains]
none = true

[logic]
active = walker@1
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[walker@1]
path_walk = uchen-x18_04_walk
path_look = uchen-x18_04_look
meet = no_meet
combat_ignore_cond = always
def_state_standing = ward
danger = danger_condition
on_info = {+uchen_enemy} walker@enemy
on_actor_dist_le_nvis = 10 | {-ploymar_start_dialog_start} remark@1 

[remark@1]
target = actor
snd = laba_privet
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_signal = sound_end | remark@2 %=play_snd(ambient\new\actor_laba)%
on_info = {+uchen_enemy} walker@enemy

[remark@2]
anim = ward
target = actor
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_timer = 4000 | walker@2

[walker@2]
path_walk = uchen-x18_04_walk
path_look = uchen-x18_04_look
meet = no_meet
combat_ignore_cond = always
def_state_standing = ward
danger = danger_condition
on_info = {+uchen_enemy} walker@enemy

[walker@enemy]
path_walk = uchen-x18_04_walk
path_look = uchen-x18_04_look
meet = no_meet
danger = danger_condition

[danger_condition]
ignore_distance = 10
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = true
meet_talk_enabled = true

[hit]
