[remark@mercd1]
anim = sit
snd = shkura1
meet = no_meet
danger = danger_condition@mercd1
combat_ignore_cond = always
target = mercd2_walk,0
on_signal = sound_end | remark@mercd2 %+shkur1%
on_info = {+spalilsa} walker@enemy %=killactor%

[remark@mercd2]
anim = sit
meet = no_meet
danger = danger_condition@mercd1
combat_ignore_cond = always
target = mercd2_walk,0
on_info = {+shkur2} remark@mercd3
on_info2 = {+spalilsa} walker@enemy %=killactor%

[remark@mercd3]
anim = sit
snd = shkura3
meet = no_meet
danger = danger_condition@mercd1
combat_ignore_cond = always
target = mercd2_walk,0
on_signal = sound_end | walker@merc1 %+shkur3%
on_info = {+spalilsa} walker@enemy %=killactor%

[walker@enemy]
path_walk = mercd1_walk
path_look = mercd1_look
meet = no_meet

[danger_condition@mercd1]
ignore_distance = 0
