[smart_terrains]
none = true

[logic]
active = walker@merc1
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[walker@merc1]
path_walk = mercd1_walk
path_look = mercd1_look
def_state_standing = sit
meet = no_meet
danger = danger_condition@mercd1
combat_ignore_cond = always
on_info = {+shkura_start -shkur3 -spalilsa} remark@mercd1
