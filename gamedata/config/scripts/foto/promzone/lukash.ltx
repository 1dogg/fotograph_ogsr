[smart_terrains]
none = true

[logic]
active = {-lukash_first_dialog_have} walker@1, {+lukash_first_dialog_have} walker@5
combat_ignore = combat_ignore
danger = danger_condition
on_hit = hit
on_death = death

[walker@1]
path_walk = lukash_walk
path_look = lukash_look
meet = meet
def_state_standing = ward
danger = danger_condition
on_actor_dist_le = 10 | {-lukash_first_dialog_start} remark@lukash
on_info = {+dezertiry_enemy -lukash_first_dialog_start} walker@3
on_info2 = {+lukash_first_dialog_start -lukash_first_dialog_have} walker@4, {+lukash_first_dialog_have} walker@5

[remark@lukash]
anim = ward
target = actor
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_info = {+dezertiry_enemy} walker@3
on_actor_dist_le = 10 | {-actor_luk} remark@lukash_2 %=play_snd(ambient\new\actor_8) +actor_luk%, {+actor_luk} remark@lukash_1

[remark@lukash_2]
anim = ward
target = actor
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_info = {+dezertiry_enemy} walker@3
on_timer = 3000 | remark@lukash_1

[remark@lukash_1]
anim = ward
target = actor
meet = no_meet
snd = leader_hello
combat_ignore_cond = always
danger = danger_condition
on_signal = sound_end | walker@2
on_info = {+dezertiry_enemy} walker@3

[walker@2]
path_walk = lukash_walk
path_look = lukash_look
meet = meet
def_state_standing = ward
danger = danger_condition
on_info = {+dezertiry_enemy} walker@3
on_info2 = {+lukash_first_dialog_start -lukash_first_dialog_have} walker@4

[walker@3]
path_walk = lukash_walk
path_look = lukash_look
meet = no_meet
danger = danger_condition

[walker@4]
path_walk = lukash2_walk
path_look = lukash2_look
meet = no_meet
def_state_moving1 = assault
def_state_moving2 = assault
def_state_moving3 = assault
danger = danger_condition
on_info = {+dezertiry_enemy} walker@6
on_info2 = {+lukash_first_dialog_have} walker@5

[walker@5]
path_walk = lukash2_walk
path_look = lukash2_look
meet = meet
def_state_standing = ward
danger = danger_condition
on_info = {+dezertiry_enemy} walker@6

[walker@6]
path_walk = lukash2_walk
path_look = lukash2_look
meet = no_meet
danger = danger_condition

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = false
meet_talk_enabled = true

[hit]
on_info = {=hit_by_actor} %+dezertiry_enemy%

[death]
on_info = {=killed_by_actor} %+dezertiry_enemy%
on_info2 = %+lukash_ubitt%