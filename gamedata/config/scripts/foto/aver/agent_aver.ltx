[smart_terrains]
none = true

[logic]
active = {-agent_aver_poshli} kamp@agent_aver_kamp, 
{+agent_aver_poshli -agent_aver_mesto} walker@1,{+agent_aver_mesto -agent_aver_uhodit} remark@2, {+agent_aver_uhodit} walker@2
danger = danger_condition
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[kamp@agent_aver_kamp]
center_point = agent_aver_center1
radius = 2.5
meet = no_meet
danger = danger_condition
on_info = {-agent_aver_poshli} remark@1, 
{+agent_aver_poshli -agent_aver_mesto} walker@1,{+agent_aver_mesto -agent_aver_uhodit} remark@2, {+agent_aver_uhodit} walker@2 

[remark@1]
target = actor
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_timer = 1000 | walker@1 %+agent_aver_poshli%

[walker@1]
path_walk = agent_aver_walk
path_look = agent_aver_look
meet = no_meet
danger = danger_condition
def_state_moving1 = run
def_state_moving2 = run
def_state_moving3 = run
on_signal = agaver | remark@2 %+agent_aver_mesto%

[remark@2]
anim = probe
target = agent_aver_look, 0
snd = gruppa_2
meet = no_meet
danger = danger_condition
on_signal = sound_end | walker@2 %+agent_aver_uhodit%
on_info = {+agent_aver_killactor} %=killactor%

[walker@2]
path_walk = agent_aver_walk
path_look = agent_aver_look
meet = no_meet
danger = danger_condition@1
on_info = {+agent_aver_killactor} %=killactor%

[danger_condition]
ignore_distance = 20
ignore_distance_corpse = 0

[danger_condition@1]
ignore_distance = 20
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = false
meet_talk_enabled = true

[hit]
on_info = {=hit_by_actor} %+agent_aver_hit +agent_aver_killactor%

[death]
on_info = %+agent_aver_dead +agent_aver_killactor%