[smart_terrains]
none = true

[logic]
active = walker@greta
combat_ignore = combat_ignore
danger = danger_condition@greta
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+bar_vrag%

[death]
on_info = {=killed_by_actor} %+bar_vrag%

[walker@greta]
path_walk = greta_walk
path_look = greta_look
meet = no_meet
def_state_standing = choose
combat_ignore_cond = always
danger = danger_condition@greta
on_actor_dist_le_nvis = 5 | {-greta_01_talk} remark@1, {+greta_01_talk -greta_02_talk} remark@2, {+greta_02_talk -greta_03_talk} remark@3 
on_info = {+bar_vrag} walker@enemy %=killactor%

[remark@1]
anim = choose
target = greta_look, 0
snd = greta_01
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_signal = sound_end | walker@greta1 %+greta_01_talk%
on_info = {+bar_vrag} walker@enemy %=killactor%

[remark@2]
anim = choose
target = greta_look, 0
snd = greta_02
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_signal = sound_end | walker@greta1 %+greta_02_talk -greta_03_talk%
on_info = {+bar_vrag} walker@enemy %=killactor%

[remark@3]
anim = choose
target = greta_look, 0
snd = greta_03
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_signal = sound_end | walker@greta1 %+greta_03_talk -greta_01_talk -greta_02_talk%
on_info = {+bar_vrag} walker@enemy %=killactor%

[walker@greta1]
path_walk = greta_walk
path_look = greta_look
meet = no_meet
def_state_standing = choose
combat_ignore_cond = always
danger = danger_condition@greta
on_info = {+bar_vrag} walker@enemy %=killactor%

[walker@enemy]
path_walk = greta_walk
path_look = greta_look
meet = no_meet
danger = danger_condition@greta

[danger_condition@greta]
ignore_distance = 0
ignore_distance_corpse = 0

