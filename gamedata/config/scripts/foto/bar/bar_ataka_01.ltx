[smart_terrains]
none = true

[logic]
active = {-levsha_start_dialog_start} walker@1, {+levsha_start_dialog_start -levsha_start_dialog_have -levsha_tronulsa} walker@2, {+levsha_start_dialog_start -levsha_start_dialog_have +levsha_tronulsa} walker@2_1, {+levsha_start_dialog_have} walker@3
combat_ignore = combat_ignore
danger = danger_condition
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+bar_ataka_vrag%

[death]
on_info = %+bar_ataka_01_dead%
on_info2 = {=killed_by_actor} %+bar_ataka_vrag%

[walker@1]
path_walk = bar_ataka_01_walk
path_look = bar_ataka_look
meet = meet
def_state_standing = ward
danger = danger_condition
on_actor_dist_le_nvis = 20 | {-levsha_start_dialog_start -levsha_skazal} remark@1 
on_info = {+levsha_start_dialog_start -levsha_start_dialog_have} walker@2, {+levsha_start_dialog_have} walker@3 
on_info2 = {+bar_ataka_vrag} %=killactor% 

[remark@1]
anim = hello_wpn
target = actor
snd = levsha_hello
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_signal = sound_end | remark@2 %=play_snd(ambient\new\actor_49) +levsha_skazal%

[remark@2]
anim = ward
target = actor
meet = meet
combat_ignore_cond = always
danger = danger_condition
on_info = {+levsha_start_dialog_start} remark@3

[remark@3]
anim = guard_rac
target = actor
snd = levsha_racia
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_timer = 10000 | walker@2_1 %=play_snd(ambient\new\actor_44) +levsha_tronulsa%

[walker@2]
path_walk = bar_ataka_01_walk
path_look = bar_ataka_look
meet = meet
def_state_standing = ward
danger = danger_condition
on_info = {+levsha_start_dialog_start -levsha_start_dialog_have -levsha_tronulsa} remark@3, {+levsha_tronulsa} walker@2_1
on_info2 = {+bar_ataka_vrag} %=killactor%  

[walker@2_1]
path_walk = bar_levsha_walk
path_look = bar_levsha_look
meet = no_meet
def_state_moving1 = assault
def_state_moving2 = assault
def_state_moving3 = assault
danger = danger_condition
on_info = {+levsha_start_dialog_have} walker@3
on_info2 = {+bar_ataka_vrag} %=killactor% 

[walker@3]
path_walk = bar_levsha_walk
path_look = bar_levsha_look
meet = meet
def_state_standing = ward
danger = danger_condition
on_info = {+bar_ataka_vrag} %=killactor% 

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = false
meet_talk_enabled = true
meet_state = ward



