[smart_terrains]
none = true

[logic]
active = {-levsha_start_dialog_done -dig_idut} kamp@bar_digger_kamp5, {+dig_idut -levsha_start_dialog_done} walker@1, {+levsha_start_dialog_done} walker@2
danger = danger_condition
combat_ignore = combat_ignore

[kamp@bar_digger_kamp5]
center_point = kamp_bar_digger_center
radius = 3
meet = meet
danger = danger_condition
combat_ignore_cond = always
on_actor_dist_le_nvis = 10 | {-levsha_start_dialog_dig} remark@1
on_info = {+levsha_start_dialog_done} walker@2 

[remark@1]
anim = hello_wpn
target = actor
snd = brom
meet = no_meet
danger = danger_condition
combat_ignore_cond = always
on_signal = sound_end | remark@vstrecha %=play_snd(ambient\new\actor_48)%

[remark@vstrecha]
target = actor
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_timer = 6000 | remark@2

[remark@2]
target = actor
meet = meet
danger = danger_condition
combat_ignore_cond = always
on_info = {+levsha_start_dialog_dig +dig_idut} walker@1

[walker@1]
path_walk = digger_05_walk
path_look = digger_05_look
meet = no_meet
danger = danger_condition
def_state_moving1 = walk
def_state_moving2 = walk
def_state_moving3 = walk
on_info = {+levsha_start_dialog_done} walker@2

[walker@2]
path_walk = digger_05_walk
path_look = digger_05_look
meet = meet
danger = danger_condition
def_state_moving1 = walk
def_state_moving2 = walk
def_state_moving3 = walk
def_state_standing = sit

[danger_condition]
ignore_distance = 10
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = false
meet_talk_enabled = true
