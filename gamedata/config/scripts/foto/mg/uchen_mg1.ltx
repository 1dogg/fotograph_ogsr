[smart_terrains]
none = true

[logic]
active = {-mg_vyhod_start} walker@1, {+mg_vyhod_start} walker@vyhod
danger = danger_condition
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+usa_enemy%

[death]
on_info = {=killed_by_actor} %+usa_enemy%
on_info2 = %+uchen_mg1_dead%

[walker@1]
path_walk = uchen_mg1_walk
path_look = uchen_mg1_look
danger = danger_condition
combat_ignore_cond = always
def_state_standing = sit
meet = no_meet
on_info = {+usa_enemy} walker@11
on_info2 = {+mg_vyhod_start} walker@2

[walker@2]
path_walk = uchen_mg1_walk
path_look = uchen_mg1_look
danger = danger_condition
combat_ignore_cond = always
meet = no_meet
on_info = {+usa_enemy} walker@11
on_timer = 16000 | walker@vyhod

[walker@vyhod] 
path_walk = uchen_mg1_vyhod_walk
path_look = uchen_mg1_vyhod_look
meet = no_meet
def_state_moving1 = run
def_state_moving2 = run
def_state_moving3 = run
danger = danger_condition
on_signal = uchenmg1end | %=fotograf.del_uchen_mg1 +uchen_mg1_del%

[walker@11]
path_walk = uchen_mg1_walk
path_look = uchen_mg1_look
danger = danger_condition
meet = no_meet

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = true
meet_talk_enabled = true
