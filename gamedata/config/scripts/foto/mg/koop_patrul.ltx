[smart_terrains]
none = true

[logic]
active = {-mg_vyhod_start} walker@1, {+mg_vyhod_start} walker@vyhod 
danger = danger_condition
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+usa_enemy%

[death]
on_info = {=killed_by_actor} %+usa_enemy%

[walker@1]
path_walk = koop_patrul_walk
path_look = koop_patrul_look
danger = danger_condition
meet = meet
combat_ignore_cond = always
on_info = {+usa_enemy} walker@11
on_info2 = {+mg_vyhod_start} walker@vyhod

[walker@vyhod]
path_walk = koop_patrul_wait_walk
path_look = koop_patrul_wait_look
danger = danger_condition
meet = no_meet
def_state_moving1 = run
def_state_moving2 = run
def_state_moving3 = run
combat_ignore_cond = always
on_timer = 20000 | {-koop_patrul_wait} walker@vyhod1 %+koop_patrul_wait%
on_info = {+koop_patrul_wait} walker@vyhod1

[walker@vyhod1] 
path_walk = koop_patrul_vyhod_walk
path_look = koop_patrul_vyhod_look
meet = no_meet
def_state_moving1 = run
def_state_moving2 = run
def_state_moving3 = run
danger = danger_condition
on_signal = kpatrulend | %=fotograf.del_koop_patrul%

[walker@11]
path_walk = koop_patrul_walk
path_look = koop_patrul_look
danger = danger_condition
meet = no_meet

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = false
meet_talk_enabled = true