[smart_terrains]
none = true

[logic]
active = {-jagger_skazal} walker@1, {+jagger_skazal -mg_vyhod_start} walker@11, {+mg_vyhod_start} walker@vyhod 
danger = danger_condition
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[hit]
on_info = {=hit_by_actor} %+usa_enemy%
on_info2 = {-mg_vyhod_start} %+jagger_zaschita%

[death]
on_info = {=killed_by_actor} %+usa_enemy%
on_info2 = %+jagger_dead%

[walker@1]
path_walk = jagger_walk
path_look = jagger_look
danger = danger_condition
def_state_standing = ward
combat_ignore_cond = always
meet = no_meet
on_actor_dist_le = 2.5 | remark@1
on_info = {+usa_enemy} walker@111
on_info2 = {+jagger_zaschita} walker@zaschita1

[walker@zaschita1]
path_walk = jagger_walk
path_look = jagger_look
danger = danger_condition
meet = no_meet
on_info = {+usa_enemy} walker@111
on_timer = 30000 | walker@1 %-jagger_zaschita%

[remark@1]
anim = ward
target = actor
snd = jagger
meet = no_meet
combat_ignore_cond = always
danger = danger_condition
on_signal = sound_end | walker@11 %+jagger_skazal%
on_info = {+usa_enemy} walker@111

[walker@11]
path_walk = jagger_walk
path_look = jagger_look
meet = meet
combat_ignore_cond = always
def_state_standing = ward
danger = danger_condition
on_info = {+usa_enemy} walker@111
on_info2 = {+mg_vyhod_start} walker@vyhod
on_info3 = {+jagger_zaschita} walker@zaschita2

[walker@zaschita2]
path_walk = jagger_walk
path_look = jagger_look
danger = danger_condition
meet = no_meet
on_info = {+usa_enemy} walker@111
on_timer = 30000 | walker@11 %-jagger_zaschita%

[walker@vyhod] 
path_walk = jagger_vyhod_walk
path_look = jagger_vyhod_look
meet = no_meet
def_state_moving1 = run
def_state_moving2 = run
def_state_moving3 = run
danger = danger_condition
on_signal = jaggerend | %=fotograf.del_jagger +jagger_del%

[walker@111]
path_walk = jagger_walk
path_look = jagger_look
meet = no_meet
def_state_standing = ward
danger = danger_condition

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = false
meet_talk_enabled = true
meet_state = ward